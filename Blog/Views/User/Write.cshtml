@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="form-group">
    <label for="textfield"><span style="font-size: large"> 标题</span>:</label>
    <input name="textfield" type="text" id="textfield" class="form-control">
</div>
<div class="form-group">
    <label for="select" style="font-size: large">分类:</label>

    <select name="select" id="select" class="form-control">
        <option>娱乐</option>
        <option>体育</option>
        <option>时尚</option>
    </select>
</div>
<div class="form-group">
    <label for="textarea" style="font-size: large">
        内容:
    </label>
    <textarea name="textarea" id="textarea" class="form-control" style="height:400px;"></textarea>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary" style="width: 100%;" onclick="login()">提交</button>
</div>
<div class="form-group">
    <input type="reset" name="reset" id="reset" value="重置" class="btn btn-primary" style="width: 100%;">
</div>

</div>





