@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="form-horizontal" style="width: 40%;margin: 50px auto;">
    <div class="form-group">
        <label for="Cellphone"><span>用户ID</span></label>
        <input class="form-control" id="UserID">
    </div>
    <div class="form-group">
        <label for="textfield">昵称:</label>
        <input type="text" name="textfield" id="textfield" class="form-control">
    </div>
    <div class="form-group">
        <label for="textfield3">电话号码:</label>
        <input type="tel" name="tel" id="tel" class="form-control">
    </div>
    <div class="form-group">
        <label for="fileField">头像:</label>
        <input type="file" name="fileField" id="fileField" class="form-control">
    </div>
    <div class="form-group">
        <input type="reset" name="reset" id="reset" class="btn btn-primary" style="width: 100%;" value="重置">
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="submit" id="submit" style="width: 100%;" value="提交">
    </div>
</div>


