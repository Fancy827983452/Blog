@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using (Html.BeginForm("WriteMessage", "UserBlog", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label for="name">留言：</label>
        <!-- 显示所有留言 每一条留言后面要有回复的链接-->
    </div>
    <br />
    <div>
        <form role="form">
            <div class="form-group">
                <label for="name">写留言：</label>
                <textarea class="form-control" rows="3" name="MessageContent"></textarea>
            </div>
            <div align="right">
                <button type="submit" class="btn btn-default">发送</button>
                <input id="Hidden1" type="hidden" name="Receiver" value=@ViewData["Receiver"]>
            </div>
        </form>
    </div>
}
