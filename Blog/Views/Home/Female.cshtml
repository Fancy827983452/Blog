@{
    var models = Model;
}
<div class="container">
    <div class="row">

        <div class="col-md-6">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-pause="hover" data-interval="3000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- 轮播（Carousel）项目 -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img style="width:600px;height:300px;" src="~/File/10.jpg" alt="First slide">
                    </div>
                    <div class="item">
                        <img style="width:600px;height:300px;" src="~/File/11.jpg" alt="Second slide">
                    </div>
                    <div class="item">
                        <img style="width:600px;height:300px;" src="~/File/12.jpg" alt="Third slide">
                    </div>
                </div>
                <!-- 轮播（Carousel）导航 -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>

        @if (models != null)
        {

            foreach (var b in models)
            {
                <div class="col-md-4">
                    <table>
                        <tr>
                            <td style="font-size:large;"><p><a style="color:black;" href="~/UserBlog/seeblogdetails?BlogID=@b.BlogID">@b.BlogTitle</a></p></td>
                            @*<td style="font-size:large; float:right"> <a class="glyphicon glyphicon-chevron-right" href="~/UserBlog/seeblogdetails?BlogID=@b.BlogID">查看详情</a></td>*@
                        </tr>
                    </table>
                </div>
            }
        }

    </div>

</div>

